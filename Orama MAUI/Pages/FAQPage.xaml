<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orama_MAUI.Pages.FAQPage"
             Title="FAQ">
    <ScrollView>
        <VerticalStackLayout Padding="20,0" Spacing="1">
            <Grid x:Name="LabelOne" Background="#eee" HeightRequest="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer  Tapped="LabelOne_Tapped"/>
                </Grid.GestureRecognizers>
                <HorizontalStackLayout Grid.Column="1">
                    <Label Text="Label 1" FontSize="22" FontFamily="Typeface" VerticalOptions="Center"/>
                </HorizontalStackLayout>
                <Image x:Name="LabeOneArrow"  Grid.Column="2" Source="{AppThemeBinding Light=arrow_next_light.png,Dark=arrow_next_dark.png}" HeightRequest="26" Rotation="90"/>
            </Grid>
            <VerticalStackLayout x:Name="LabelOneContent" IsVisible="false" Padding="10,0" Spacing="2">
                <HorizontalStackLayout IsVisible="True" BackgroundColor="#ffe">
                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="LabelOneQuesOne_Tapped"/>
                    </HorizontalStackLayout.GestureRecognizers>
                    <Label Text="Q1. here lies your question?" FontSize="18" TextColor="red"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout  x:Name="LabelOneAnswerOne" IsVisible="False">
                    <Label Text="Ans 1. here lies your Answer." FontSize="18"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout IsVisible="True" BackgroundColor="#ffe">
                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="LabelOneQuesTwo_Tapped"/>
                    </HorizontalStackLayout.GestureRecognizers>
                    <Label Text="Q2. here lies your question?" FontSize="18" TextColor="red"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout  x:Name="LabelOneAnswerTwo" IsVisible="False">
                    <Label Text="Ans 2. here lies your Answer." FontSize="18"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout IsVisible="True" BackgroundColor="#ffe">
                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="LabelOneQuesThree_Tapped"/>
                    </HorizontalStackLayout.GestureRecognizers>
                    <Label Text="Q3. here lies your question?" FontSize="18" TextColor="red"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout  x:Name="LabelOneAnswerThree" IsVisible="false">
                    <Label Text="Ans 3. here lies your Answer." FontSize="18"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <Grid x:Name="LabelTwo" Background="#eee" HeightRequest="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer  Tapped="LabelTwo_Tapped"/>
                </Grid.GestureRecognizers>
                <HorizontalStackLayout Grid.Column="1">
                    <Label Text="Label 2" FontSize="22" FontFamily="Typeface" VerticalOptions="Center"/>
                </HorizontalStackLayout>
                <Image x:Name="LabeTwoArrow"  Grid.Column="2" Source="{AppThemeBinding Light=arrow_next_light.png,Dark=arrow_next_dark.png}" HeightRequest="26" Rotation="90"/>
            </Grid>
            <VerticalStackLayout x:Name="LabelTwoContent" IsVisible="false" Padding="10,0" Spacing="2">
                <HorizontalStackLayout IsVisible="True" BackgroundColor="#ffe">
                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="LabelTwoQuesOne_Tapped"/>
                    </HorizontalStackLayout.GestureRecognizers>
                    <Label Text="Q1. here lies your question?" FontSize="18" TextColor="red"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout  x:Name="LabelTwoAnswerOne" IsVisible="false">
                    <Label Text="Ans 1. here lies your Answer." FontSize="18"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout IsVisible="True" BackgroundColor="#ffe">
                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="LabelTwoQuesTwo_Tapped"/>
                    </HorizontalStackLayout.GestureRecognizers>
                    <Label Text="Q2. here lies your question?" FontSize="18" TextColor="red"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout  x:Name="LabelTwoAnswerTwo" IsVisible="false">
                    <Label Text="Ans 2. here lies your Answer." FontSize="18"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout IsVisible="True" BackgroundColor="#ffe">
                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="LabelTwoQuesThree_Tapped"/>
                    </HorizontalStackLayout.GestureRecognizers>
                    <Label Text="Q3. here lies your question?" FontSize="18" TextColor="red"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout  x:Name="LabelTwoAnswerThree" IsVisible="false">
                    <Label Text="Ans 3. here lies your Answer." FontSize="18"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>