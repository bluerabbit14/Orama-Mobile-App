<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orama_MAUI.Pages.LoginPage"
             Shell.NavBarIsVisible="False"
             Padding="25">
<!--   Login Feature-->
    <VerticalStackLayout>
        
        <HorizontalStackLayout x:Name="Orama_Title" HorizontalOptions="Center">
            <Image Source="orama.png" WidthRequest="45"/>
            <Label Text="Orama" TextColor="Black" FontSize="40"/>
        </HorizontalStackLayout>
       
        <VerticalStackLayout x:Name="Page_instruction" Padding="25">
            <Label Text="Only login via Email,Google,or +91 phone number is supported in your region." FontSize="13"/>
        </VerticalStackLayout>

        <Grid x:Name="Login_Credential_Entry" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Frame Grid.Row="0" Padding="5">
                <HorizontalStackLayout>
                    <Image Source="email.png" WidthRequest="25"/>
                    <Entry x:Name="EmailEntry" Placeholder="Email/ +91 Phone number" Keyboard="Email" FontSize="20" ClearButtonVisibility="Never" WidthRequest="310"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame Grid.Row="1"  Padding="5">
                <HorizontalStackLayout>
                    <Image Source="password.png" WidthRequest="25"/>
                    <Entry x:Name="PasswordEntry" Placeholder="Password" Keyboard="Text" FontSize="20" ClearButtonVisibility="Never"  WidthRequest="310"/>
                </HorizontalStackLayout>
            </Frame>
        </Grid>
        
        <Grid x:Name="Term_and_Condition_Checkbox" Padding="10" >
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>
            
            <CheckBox x:Name="Checkbox" Grid.Row="0" Grid.Column="0"/>
            
            <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="I confirm that I have read, consent and agree to Orama's "/>
                        <Span Text="Terms of Use" TextDecorations="Underline"/>
                        <Span Text=" and "/>
                        <Span Text="Privacy Policy" TextDecorations="Underline"/>
                        <Span Text="."/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Grid>

        <Button x:Name="Login_button" Text="Log in" FontSize="20" Clicked="LoginButton_Clicked" Margin="10"/>
        
        <HorizontalStackLayout x:Name="Others" Spacing="150" Margin="10">
            <Label Text="Forgot password?" TextColor="blue" FontSize="16">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Forgotpassword_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
            <Label Text="Sign up" TextColor="blue" FontSize="16">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Signup_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>

        <VerticalStackLayout x:Name="Separator"  VerticalOptions="End">
            <HorizontalStackLayout>
                <BoxView WidthRequest="160" HeightRequest="1" />
                <Label Text="or" Margin="10" FontSize="18"/>
                <BoxView WidthRequest="160" HeightRequest="1" />
            </HorizontalStackLayout>

            <Frame x:Name="Google_signin_option" IsEnabled="False">
                <HorizontalStackLayout HorizontalOptions="Center" >
                    <Image Source="google.png" WidthRequest="17"/>
                    <Label Text="Sign in with Google" FontSize="17" Margin="10,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </Frame>

            <Label Text="Contact Us" TextColor="Blue" HorizontalOptions="Center" Margin="8" FontSize="16" TextDecorations="Underline">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Contactus_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>