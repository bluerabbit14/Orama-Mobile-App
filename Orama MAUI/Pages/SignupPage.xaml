<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orama_MAUI.Pages.SignUpPage"
             Shell.NavBarIsVisible="False"
             Padding="30">
    <VerticalStackLayout>

        <HorizontalStackLayout x:Name="Orama_Title" HorizontalOptions="Center">
            <Image Source="{AppThemeBinding Light=Orama_light.png,Dark=Orama_dark.png}" WidthRequest="45"/>
            <Label Text="Orama" FontSize="40"/>
        </HorizontalStackLayout>

        <VerticalStackLayout x:Name="Page_instruction" Padding="25">
            <Label Text="Only login via Email,Google,or +91 phone number is supported in your region." FontSize="13"/>
        </VerticalStackLayout>

        <Grid x:Name="Signup_Credential_Entry" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Frame Grid.Row="0" Padding="5" x:Name="NameEntryFrame">
                <HorizontalStackLayout>
                    <Image Source="{AppThemeBinding Light=profile1_light.png,Dark=profile1_dark.png}" WidthRequest="20"/>
                    <Entry x:Name="NameEntry" Placeholder="Name" Keyboard="Text" FontSize="20" ClearButtonVisibility="Never" WidthRequest="310"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame Grid.Row="1" Padding="5" x:Name="EmailEntryFrame">
                <HorizontalStackLayout>
                    <Image Source="{AppThemeBinding Light=email_light.png,Dark=email_dark.png}" WidthRequest="25"/>
                    <Entry x:Name="IdEntry" Placeholder="Email" Keyboard="Text" FontSize="20" ClearButtonVisibility="Never" WidthRequest="310"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame Grid.Row="2" Padding="5" x:Name="PasswordEntry1Frame">
                <HorizontalStackLayout>
                    <Image Source="{AppThemeBinding Light=password_light.png,Dark=password_dark.png}" WidthRequest="25"/>
                    <Entry x:Name="PasswordEntry1" Placeholder="Password" Keyboard="Text" FontSize="20" ClearButtonVisibility="Never"  WidthRequest="310"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame Grid.Row="3" Padding="5" x:Name="PasswordEntry2Frame">
                <HorizontalStackLayout>
                    <Image Source="{AppThemeBinding Light=password_light.png,Dark=password_dark.png}" WidthRequest="25"/>
                    <Entry x:Name="PasswordEntry2" Placeholder="Confirm password" Keyboard="Text" FontSize="20" ClearButtonVisibility="Never"  WidthRequest="310"/>
                </HorizontalStackLayout>
            </Frame>

        </Grid>

        <Grid x:Name="Term_and_Condition_Checkbox" Padding="10" >
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>

            <CheckBox x:Name="Checkbox" Grid.Row="0" Grid.Column="0" Color="{AppThemeBinding Light=Blue,Dark=White}" CheckedChanged="Checkbox_CheckedChanged"/>

            <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="I confirm that I have read, consent and agree to Orama's "/>
                        <Span Text="Terms of Use" TextDecorations="Underline" TextColor="{AppThemeBinding Light=Blue,Dark=White}">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TermCondition_Tapped"/>
                            </Span.GestureRecognizers>
                        </Span>
                        <Span Text=" and "/>
                        <Span Text="Privacy Policy" TextDecorations="Underline" TextColor="{AppThemeBinding Light=Blue,Dark=White}">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Tapped="PrivacyPolicy_Tapped"/>
                            </Span.GestureRecognizers>
                        </Span>
                        <Span Text="."/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Grid>

        <Button Text="Sign up" FontSize="20" Clicked="SignupButton_Clicked"/>
        <!--  Contact us/log in-->
        <HorizontalStackLayout Spacing="210" Margin="0,10">
            <Label Text="Contact us" FontSize="16" TextColor="{AppThemeBinding Light=Blue,Dark=White}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Contactus_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
            <Label Text="Log in" TextColor="{AppThemeBinding Light=Blue,Dark=White}" FontSize="16">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Login_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>