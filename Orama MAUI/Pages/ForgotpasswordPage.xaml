<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orama_MAUI.Pages.ForgotPasswordPage"
             Shell.NavBarIsVisible="False"
             Padding="30">
    <VerticalStackLayout Margin="0,30">

        <HorizontalStackLayout x:Name="Orama_Title" HorizontalOptions="Center">
            <Image Source="{AppThemeBinding Light=Orama_light.png,Dark=Orama_dark.png}" WidthRequest="45"/>
            <Label Text="Orama" FontSize="40"/>
        </HorizontalStackLayout>

        <Label Text="Reset Password" HorizontalOptions="Center" FontSize="35" Margin="0,20"/>
        <Label Text="Enter your email address and we will send you a verification code to reset your password." FontSize="13" HorizontalOptions="Center" WidthRequest="300"/>

        <Grid x:Name="Reset_Credential_Entry" RowSpacing="20" Margin="0,40,0,20">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Frame Grid.Row="0" Padding="5" x:Name="IdEntryFrame">
                <HorizontalStackLayout>
                    <Image Source="{AppThemeBinding Light=email_light.png,Dark=email_dark.png}" WidthRequest="25"/>
                    <Entry x:Name="IdEntry" Placeholder="Email" Keyboard="Email" FontSize="20" ClearButtonVisibility="Never" WidthRequest="310"/>
                </HorizontalStackLayout>
            </Frame>
        </Grid>

        <Button x:Name="confirm_button" Text="Verify" FontSize="22" Clicked="VerifyButton_Clicked"/>

        <HorizontalStackLayout x:Name="others" Spacing="190" Padding="10">
            <Label Text="Contact us" TextColor="{AppThemeBinding Light=Blue, Dark=White}"  FontSize="18">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Contactus_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
            <Label Text="Log in" TextColor="{AppThemeBinding Light=Blue, Dark=White}"  FontSize="18">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Login_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>