<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orama_MAUI.Pages.ForgotpasswordPage"
             Shell.NavBarIsVisible="False"
             Padding="30">

<!-- ForgotPasssword Feature-->
    <VerticalStackLayout Margin="0,30">

        <HorizontalStackLayout x:Name="Orama_Title" HorizontalOptions="Center">
            <Image Source="orama.png" WidthRequest="45"/>
            <Label Text="Orama" TextColor="Black" FontSize="40"/>
        </HorizontalStackLayout>

        <Label Text="Reset Password" HorizontalOptions="Center" FontSize="35" Margin="0,20"/>
        <Label Text="Enter your email address and we will send you a verification code to reset your password." FontSize="13" HorizontalOptions="Center" WidthRequest="300"/>

        <Grid x:Name="Reset_Credential_Entry" RowSpacing="20" Margin="0,15">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Frame Grid.Row="0" Padding="5">
                <HorizontalStackLayout>
                    <Image Source="email.png" WidthRequest="25"/>
                    <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" FontSize="20" ClearButtonVisibility="Never" WidthRequest="310"/>
                </HorizontalStackLayout>
            </Frame>
            <HorizontalStackLayout Grid.Row="1" Spacing="15">
                <Frame Padding="5">
                    <HorizontalStackLayout>
                        <Image Source="hash.png" WidthRequest="20" Margin="5,0"/>
                        <Entry x:Name="CodeEntry" Placeholder="Code" Keyboard="Numeric" MaxLength="4" WidthRequest="190" FontSize="20"/>
                    </HorizontalStackLayout>
                </Frame>
                <Frame Padding="0">
                    <Button Text="Send Code" FontSize="18" Padding="5" Clicked="Button_Clicked"/>
                </Frame>
            </HorizontalStackLayout>
        </Grid>

        <Button x:Name="confirm_button" Text="Confirm" FontSize="25" Margin="0,10" Clicked="ConfirmButton_Clicked"/>

        <HorizontalStackLayout x:Name="others" Spacing="200" Margin="10">
            <Label Text="Contact us" TextDecorations="Underline" TextColor="blue" FontSize="18">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Contactus_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
            <Label Text="Log in" TextColor="blue" FontSize="18">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Login_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>