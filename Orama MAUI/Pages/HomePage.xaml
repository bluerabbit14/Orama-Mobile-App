<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orama_MAUI.Pages.HomePage"
             Title="Home">
    <ScrollView>
        <VerticalStackLayout Padding="10">

            <!-- ✅ CarouselView with ItemsSource bound -->
            <CarouselView x:Name="HomeCarousel"
                          ItemsSource="{Binding Items}"
                          IndicatorView="HomeIndicator">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="10">
                            <Label Text="{Binding Value}"
                                   FontSize="20"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <!-- ✅ IndicatorView must be linked to Carousel -->
            <IndicatorView x:Name="HomeIndicator"
                           Margin="10"
                           HorizontalOptions="Center"
                           IndicatorColor="Green"
                           SelectedIndicatorColor="Red"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>