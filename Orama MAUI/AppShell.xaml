<Shell
    x:Class="Orama_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Orama_MAUI.Pages"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarBackgroundColor="{AppThemeBinding Light='#512BD4', Dark='#512BD4'}"
    Shell.TabBarForegroundColor="{AppThemeBinding Light='White', Dark='White'}"
    Shell.TabBarTitleColor="{AppThemeBinding Light=White,Dark=White}"
    Shell.TabBarUnselectedColor="Gray">

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <HorizontalStackLayout Padding="100,10" BackgroundColor="#512BD4">
            <Image Grid.Column="0" Source="{AppThemeBinding Light=orama_dark.png,Dark=orama_dark.png}" HeightRequest="35" HorizontalOptions="End"/>
            <Label Grid.Column="1" Text="Orama" FontSize="24" TextColor="#fff" />
        </HorizontalStackLayout>
    </Shell.FlyoutHeader>

    <!-- Flyout Footer -->

    <Shell.FlyoutFooter>
        <HorizontalStackLayout Padding="10" BackgroundColor="#512BD4">
            <Label Text="Build By Asif Abbas" FontSize="18" TextColor="#fff" Padding="60,0"/>
        </HorizontalStackLayout>
    </Shell.FlyoutFooter>
    
    
    
